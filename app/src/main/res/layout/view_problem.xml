<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/problem_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_normal"
        android:textColor="@android:color/black"
        android:textSize="@dimen/size_normal_font" />

    <TextView
        android:id="@+id/problem_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_normal"
        android:layout_marginEnd="@dimen/size_normal"
        android:layout_marginBottom="@dimen/size_normal"
        android:textSize="@dimen/size_small_font" />
</LinearLayout>