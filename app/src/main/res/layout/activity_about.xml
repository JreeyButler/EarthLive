<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/app_icon"
        android:layout_width="@dimen/size_about_icon"
        android:layout_height="@dimen/size_about_icon"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/size_about_icon"
        android:src="@mipmap/ic_launcher" />


    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_icon"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/size_normal"
        android:text="@string/app_name"
        android:textColor="@android:color/black"
        android:textSize="@dimen/size_about_title"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/app_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_name"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/app_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/check_update"
        android:layout_margin="@dimen/size_small"
        android:text="@string/feedback"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/check_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/size_small"
        android:text="@string/check_update"
        android:textAllCaps="false" />
</RelativeLayout>