<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <ImageView
        android:id="@+id/app_icon"
        android:layout_width="@dimen/size_about_icon"
        android:layout_height="@dimen/size_about_icon"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/size_large"
        android:src="@mipmap/ic_launcher" />


    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/size_small"
        android:text="@string/app_name"
        android:textColor="@android:color/black"
        android:textSize="@dimen/size_normal_font" />

    <TextView
        android:id="@+id/app_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/size_small"
        android:text="V1.0.0"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/app_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_normal"
        android:textColor="@android:color/black" />
</LinearLayout>